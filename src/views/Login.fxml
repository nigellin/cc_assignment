<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="250.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="controllers.LoginController">
  <children>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
      <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="[TITLE]">
          <font>
            <Font name="System Bold" size="25.0" />
          </font>
          <VBox.margin>
            <Insets bottom="20.0" />
          </VBox.margin>
        </Text>
        <GridPane alignment="CENTER" hgap="25.0" maxWidth="400.0" vgap="10.0">
          <children>
            <Label contentDisplay="CENTER" text="Access Key" textAlignment="LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
              <font>
                <Font size="15.0" fx:id="x1" />
              </font>
            </Label>
            <Label contentDisplay="CENTER" font="$x1" text="Secret Key" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="accessKeyField" onKeyPressed="#actionKeyPressed" prefHeight="30.0" prefWidth="-1.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <PasswordField fx:id="secretKeyField" onKeyPressed="#actionKeyPressed" prefHeight="30.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          </children>
          <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="274.0" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="350.0" minWidth="10.0" prefWidth="350.0" />
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
        </GridPane>
        <FlowPane alignment="CENTER_RIGHT" hgap="20.0" maxWidth="400.0" prefHeight="30.0" prefWidth="-1.0" vgap="0.0">
          <children>
            <Text id="message" fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" text="">
              <font>
                <Font name="System Bold" size="13.0" />
              </font>
              <FlowPane.margin>
                <Insets />
              </FlowPane.margin>
            </Text>
            <SplitMenuButton mnemonicParsing="false" onAction="#processLogin" popupSide="BOTTOM" text="Login">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#processImportKeyFile" text="Import a Key File" />
              </items>
            </SplitMenuButton>
          </children>
        </FlowPane>
      </children>
    </VBox>
  </children>
</AnchorPane>
